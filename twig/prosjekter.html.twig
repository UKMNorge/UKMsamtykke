<div class="samtykke">
	<h1>
		Prosjekter
		<small>
			<a href="?page={{ GET('page') }}&action=prosjekt&prosjekt=new" class="btn btn-success btn-xs">Opprett nytt</a>
		</small>
	</h1>
	
	<ol class="list-group col-12 col-md-6">
		{% for prosjekt in prosjekter %}
			<li class="list-group-item">
				<div class="action">
					<a href="?page={{ GET('page') }}&action=samtykker&prosjekt={{ prosjekt.getId() }}" class="btn btn-xs btn-mini btn-primary">foresp√∏rsler</a>
				</div>
				<div class="icon">
					<img src="//ico.ukm.no/{{ prosjekt.isLocked() ? 'lock-256' : 'pencil-32' }}.png" height="17" />
				</div>
				<a href="?page={{ GET('page') }}&action=prosjekt&prosjekt={{ prosjekt.getId() }}">{{ prosjekt.getTittel() }}</a>

			</li>
		{% else %}
			<li class="list-group-item">Det er ikke lagt til noen prosjekter enda</li>
		{% endfor %}
	</ol>
</div>